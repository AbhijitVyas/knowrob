<launch>
  <!-- mongo DB configuration -->
  <arg name="mongodb_name" default="roslog" />
  
  <!-- triple store configuration -->
  <arg name="pl_triple_store" default="db/mongo/triple_store" />
  <env name="KB_TRIPLE_STORE" value="$(arg pl_triple_store)" />
  
  <!-- Additional Prolog modules -->
  <arg name="pl_modules" default="db/mongo/ros" />
  <env name="PL_MODULES" value="$(arg pl_modules)" />
  
  <include file="$(find rosprolog)/launch/rosprolog.launch">
    <arg name="initial_package" default="knowrob" />
    <arg name="initial_goal" default="true" />
  </include>

  <include file="$(find knowrob)/launch/object_state_publisher.launch" />
</launch>
